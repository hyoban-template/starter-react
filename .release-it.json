{
  "git": {
    "commitMessage": "chore: release ${version}"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "angular"
      },
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true
    }
  },
  "hooks": {
    "before:init": ["pnpm lint", "pnpm typecheck"],
    "after:bump": "pnpm build",
    "before:release": "git add CHANGELOG.md"
  }
}
