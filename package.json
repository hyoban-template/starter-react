    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "eslint": "^8.57.0",
    "eslint-config-hyoban": "^0.1.22",
    "eslint-plugin-react-hooks": "^4.6.0",
    "i18next": "^23.9.0",
    "is-network-error": "^1.0.1",
    "jotai": "^2.6.4",
