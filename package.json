    "ofetch": "^1.3.3",
    "react": "^18.2.0",
    "react-day-picker": "^8.10.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.50.1",
    "react-i18next": "^14.0.5",
    "react-resizable-panels": "^2.0.11",
    "react-twc": "^1.4.1",
    "release-it": "^17.1.1",
    "simple-git-hooks": "^2.9.0",
